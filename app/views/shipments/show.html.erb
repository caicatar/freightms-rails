

<p style="color: green"><%= notice %></p>
<div class="order_form">
  <h1>Shipment ID: <%= @shipment.id %></h1>
  <div class="row">
    <div class="order_details">
      <h4>Shipment Details</h4>
      <h3>Status:<strong><%=  @shipment.status %></strong></h3>
      <h3>Shipment Date: <strong><%= @shipment.shipment_date %></strong></h3>
      <br>
      <h4>Warehouse Details</h4>
      <h3>From Warehouse: <strong><%=  @shipment.from_warehouse.name %></strong></h3>
      <h3>Latitude: <strong><%=  @shipment.from_warehouse.latitude %></strong></h3>
      <h3>Longitude: <strong><%=  @shipment.from_warehouse.longitude %></strong></h3>
      <br>
      <h3>To Warehouse: <strong><%=  @shipment.to_warehouse.name %></strong></h3>
      <h3>Latitude: <strong><%=  @shipment.to_warehouse.latitude %></strong></h3>
      <h3>Longitude: <strong><%=  @shipment.to_warehouse.longitude %></strong></h3>
      <h3>Product:<strong><%=  @shipment.product.name %></strong></h3>
    </div>
    <div class="order_details">
      <h4>Fleet Details</h4>
      <h3>Vehicle: <strong><%= @shipment.vehicle.name %></strong></h3>
      <h3>Driver: <strong><%= @shipment.driver.name %></strong></h3>
      <h3>Driver License: <strong> <%= @shipment.driver.license_number %></strong></h3>
      <h3>Vehicle Capacity: <strong><%= @shipment.vehicle.capacity %></strong></h3>
    </div>
  </div>

  <%= render @shipment %>
  <div class="row">
    <%= link_to "Edit this shipment", edit_shipment_path(@shipment)%>
    <%= link_to "Back to shipments", dashboard_shipments_page_path %>
    <%= button_to "Destroy this shipment", @shipment, method: :delete %>
  </div>

</div>
