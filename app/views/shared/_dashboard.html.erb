<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
  <script async src="https://unpkg.com/micromodal/dist/micromodal.min.js"></script>
  <%= stylesheet_link_tag "style", "data-turbo-track": "reload" %>
  <title>Freight Management System</title>
</head>

<body>

<div class="container">
  <!-- Sidebar Section -->
  <aside>
    <div class="toggle">
      <div class="logo">
        <img src="<%= asset_path("logo.png") %>" style="width: fit-content;">
        <h2>KARGADA</h2>
      </div>
      <div class="close" id="close-btn">
            <span class="material-icons-sharp">
                close
            </span>
      </div>
    </div>

    <div class="sidebar">
      <a href="<%= dashboard_page_path %>" class="<%= (current_page?('/dashboard_page_path')) ? 'active' : '' %>">
                    <span class="material-icons-sharp">
                        dashboard
                    </span>
        <h3>Dashboard</h3>
      </a>
      <a href="<%= dashboard_shipments_page_path %>"
         class=" <%= (current_page?('/dashboard_shipments') || controller_name == 'shipments') ? 'active' : '' %>">
                    <span class="material-icons-sharp">
                        local_shipping
                    </span>
        <h3>Shipments</h3>
      </a>
      <a href="<%= dashboard_warehouses_page_path %>" class="<%= (current_page?('/dashboard_warehouses') || controller_name == 'warehouses') ? 'active' : '' %>">
                    <span class="material-icons-sharp">
                        warehouse
                    </span>
        <h3>Warehouses</h3>
      </a>
      <a href="<%= dashboard_loads_page_path %> class="<%= (current_page?('/dashboard_loads') || controller_name == 'loads') ? 'active' : '' %>">
                    <span class="material-icons-sharp">
                        inventory_2
                    </span>
        <h3>Loads</h3>
      </a>
      <a href="<%= dashboard_fleet_page_path %> class="<%= (current_page?('/dashboard_vehicles') || controller_name == 'fleet') ? 'active' : '' %>">
                <span class="material-icons-sharp">
                directions_car
                </span>
        <h3>Vehicles</h3>
      </a>
      </a>
      <a href="<%= dashboard_drivers_page_path %> class="<%= (current_page?('/dashboard_drivers') || controller_name == 'driver') ? 'active' : '' %>">
      <span class="material-icons-sharp">
                person
                </span>
      <h3>Drivers</h3>
      </a>
      <li>

        <%= link_to "Sign out", destroy_path, method: :delete %>
      </li>
    </div>
  </aside>
  <!-- End of Sidebar Section -->

  <!-- Main Content -->
  <main>
    <%= yield %>
  </main>
  <!-- End of Main Content -->

  <!-- Right Section -->
  <div class="right-section">
    <div class="nav">
      <button id="menu-btn">
                    <span class="material-icons-sharp">
                        menu
                    </span>
      </button>
      <div class="dark-mode">
                    <span class="material-icons-sharp active">
                        light_mode
                    </span>
        <span class="material-icons-sharp">
                        dark_mode
                    </span>
      </div>

      <div class="profile">
        <div class="info">
          <p>Hey, <b><%= current_user.email %></b></p>
          <small class="text-muted">Admin</small>
        </div>
        <div class="profile-photo">
          <img src="<%= asset_path("profile-2.jpg") %>"/>
        </div>
      </div>

    </div>
    <!-- End of Nav -->

  </div>


</div>

<%= javascript_include_tag("index") %>

</body>

</html>
