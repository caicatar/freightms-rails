<div class="recent-orders">
  <h2>Shipments</h2>
  <div style="width: 15%;">
    <a href="<%= new_shipment_path %>" class="button" style="color: white;">Create Shipment</a>
  </div>
  <table>
    <thead>
    <tr>
      <th>Shipment ID</th>
      <th>Date</th>
      <th>Vehicle</th>
      <th>Status</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @shipments.each do |shipment| %>
    <tr>
      <td><%= link_to shipment.id, shipment_path(shipment.id) %></td>
      <td><%= shipment.shipment_date %></td>
      <td><%= shipment.vehicle.name %></td>
      <td><%= shipment.status %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>